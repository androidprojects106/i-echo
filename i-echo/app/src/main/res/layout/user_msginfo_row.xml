<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:focusable="false"
android:clickable="false"
android:focusableInTouchMode="false">
    <ImageView
        android:id="@+id/leftdisplay"
        android:layout_alignParentStart="true"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/lefttexticon"
        android:layout_marginStart="5dp"
        android:gravity="center_vertical"
        android:baselineAlignBottom="false"
        android:focusable="false">
    </ImageView>

    <TextView
        android:id="@+id/leftrow"
        android:layout_toEndOf="@+id/leftdisplay"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="start"
        android:gravity="start"
        android:layout_marginStart="5dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:scrollHorizontally="true"
        android:textColor="#80ff0000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/rightrow"
        android:layout_toStartOf="@+id/rightdisplay"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="16sp"
        android:layout_gravity="end"
        android:gravity="end"
        android:layout_marginEnd="5dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:scrollHorizontally="true"
        android:textColor="#d5858585" />

    <ImageView
        android:id="@+id/rightdisplay"
        android:layout_alignParentEnd="true"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/rightaudioicon"
        android:layout_marginEnd="5dp"
        android:gravity="center_vertical"
        android:baselineAlignBottom="false"
        android:focusable="false">
    </ImageView>
</RelativeLayout>