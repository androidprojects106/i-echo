<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:id="@+id/container_cm_item"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:descendantFocusability="blocksDescendants">
    <ImageView
        android:layout_width="@dimen/icon_width"
        android:layout_height="@dimen/icon_height"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:clickable="false"
        android:contentDescription="@string/string_row_cm_image"
        android:src="@drawable/plus"
        android:layout_gravity="start|center_vertical"
        android:id="@+id/image_cm_item" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/image_cm_item"
        android:layout_marginStart="5dp"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="20sp"
        android:text="@string/string_loading"
        android:gravity="start|center_vertical"
        android:layout_gravity="start|center_vertical"
        android:background="@drawable/a_box_cm_list_fill_solid"
        android:id="@+id/textview_cm"/>
    <me.grantland.widget.AutofitTextView
        android:layout_width="@dimen/user_info_max_width"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="45dp"
        android:gravity="start|center_vertical"
        android:layout_gravity="start|center_vertical"
        android:singleLine="true"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="@string/string_loading"
        android:id="@+id/textview_user_info"/>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_gravity="center_vertical"
        android:id="@+id/container_image_cm_reasons" >
        <ImageView
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            android:layout_toStartOf="@+id/image_cm_reason2"
            android:layout_marginTop="-5dp"
            android:clickable="false"
            android:contentDescription="@string/string_row_cm_image"
            android:src="@drawable/plus"
            android:layout_gravity="end|center_vertical"
            android:id="@+id/image_cm_reason3" />
        <ImageView
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            android:layout_toStartOf="@+id/image_cm_reason1"
            android:layout_marginTop="-5dp"
            android:clickable="false"
            android:contentDescription="@string/string_row_cm_image"
            android:src="@drawable/plus"
            android:layout_gravity="end|center_vertical"
            android:id="@+id/image_cm_reason2" />
        <ImageView
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-5dp"
            android:clickable="false"
            android:contentDescription="@string/string_row_cm_image"
            android:src="@drawable/plus"
            android:layout_gravity="end|center_vertical"
            android:id="@+id/image_cm_reason1" />
    </RelativeLayout>
</RelativeLayout>